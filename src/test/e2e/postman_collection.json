{
  "info": {
    "name": "Image Processing API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "source",
      "value": "https://psdstamps.com/wp-content/uploads/2022/04/test-stamp-png-768x512.png"
    }
  ],
  "item": [
    {
      "name": "Create Task",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has taskId', function () {",
              "  const jsonData = pm.response.json();",
              "  pm.expect(jsonData).to.have.property('taskId');",
              "  pm.environment.set('taskId', jsonData.taskId);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"source\": \"{{source}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/tasks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Get Task Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Task has valid status', function () {",
              "  const jsonData = pm.response.json();",
              "  pm.expect(['pending', 'completed', 'failed']).to.include(jsonData.status);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks",
            "{{taskId}}"
          ]
        }
      }
    },
    {
      "name": "Create Task (Duplicated Source) 1/3",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Ensure we reuse the same source as the first request",
              "if (!pm.environment.get('source')) {",
              "  pm.environment.set('source', pm.collectionVariables.get('source'));",
              "}"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has taskId', function () {",
              "  const jsonData = pm.response.json();",
              "  pm.expect(jsonData).to.have.property('taskId');",
              "  // Use the duplicate task id for the next step",
              "  pm.environment.set('taskId', jsonData.taskId);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"source\": \"{{source}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/tasks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Wait 2 seconds (Duplicated Source) 2/3",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "console.log('Waiting for 2 seconds...');",
              "setTimeout(() => {}, 2000);"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": {
          "raw": "https://httpbin.org/delay/2",
          "protocol": "https",
          "host": ["httpbin","org"],
          "path": ["delay","2"]
        }
      }
    },
    {
      "name": "Get Task Status (Duplicated Source) 3/3",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Task is failed and includes an error key', function () {",
              "  const jsonData = pm.response.json();",
              "  pm.expect(jsonData.status).to.eql('failed');",
              "  pm.expect(jsonData).to.have.property('error');",
              "  // Optional: error should be a non-empty string",
              "  pm.expect(jsonData.error).to.be.a('string');",
              "  pm.expect(jsonData.error.length).to.be.greaterThan(0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks",
            "{{taskId}}"
          ]
        }
      }
    }
  ]
}
